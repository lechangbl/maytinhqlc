<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="CellText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CellEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">4dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="EditCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="MyCardView">
<!--        <item name="cardCornerRadius">12dp</item>-->
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="txtHienthiName">
        <item name="android:background">@drawable/bg_edittext</item>
<!--        <item name="android:background">#64B5F6</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">20dp</item> <!-- tuỳ chỉnh -->
        <item name="android:padding">4dp</item> <!-- 👈 Thêm dòng này -->
    </style>

    <style name="txtHienthiValue">
        <item name="android:background">@drawable/bg_edittext</item>
<!--        <item name="android:background">#64B5F6</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item> <!-- tuỳ chỉnh -->
        <item name="android:padding">4dp</item> <!-- 👈 Thêm dòng này -->
    </style>

    <style name="edtNhap">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:padding">5dp</item> <!-- 👈 Thêm dòng này -->
    </style>

    <style name="spKhoangTrang">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#EFEFEF</item> <!-- Màu nền -->
    </style>





</resources>